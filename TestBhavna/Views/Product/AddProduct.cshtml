
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/_Layout - Admin.cshtml";
}
<br />
<br />
<br />
<h2 style="text-align:center;">AddProduct</h2>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Content/Pages/AddProduct.js"></script>

<br />
<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"></h3>
        <nav aria-label="breadcrumb">

        </nav>
    </div>
    <div class="row">
        <div class="col-sm-2 grid-margin stretch-card"></div>
        <div class="col-md-8 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">Add Product</h3>
                    <div class="forms-sample">

                        <div class="form-group">
                            <label for="Productname">ProductName</label>
                            <input type="text" id="txtProductName" autocomplete="off" class="form-control" placeholder="Product Name" />
                        </div>
                        <div class="form-group">
                            <label for="Selectcategory">Select Category</label>
                            <select class="form-control" id="ddlCategoryId">
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="Price">Price</label>
                            <input type="text" id="txtPrice" autocomplete="off" class="form-control" placeholder="Estimated Cost" />
                        </div>
                        <div class="form-group">
                            <label for="CakeSize">Size</label>
                            <input type="text" id="txtSize" autocomplete="off" class="form-control" placeholder="Customized Size" />
                        </div>
                        <div class="form-group">
                            <label for="Unit">Select Unit</label>
                            <select class="form-control" autocomplete="off" id="txtUnit">
                                <option>Select Unit</option>
                                <option value="Kilograms">Kilograms</option>
                                <option value="Grams">Grams</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="Image">ProductPhoto</label>
                            <input id="File1" class="form-control" type="file" placeholder="Image" />
                        </div>
                        <div class="form-group">
                            <label for="Mdate">ManufacturingDate</label>
                            <input type="date" id="txtManufacturingDate" autocomplete="off" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="Edate">ExpireDate</label>
                            <input type="date" id="txtExpiryDate" autocomplete="off" class="form-control" />
                        </div>
                        <input id="btnSubmit" type="button" value="submit" onclick="saveaddProduct()" class="btn btn-primary mr-2" />

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br />







